<Window x:Class="All_in_One.VisualLogic.Windows.PleaseWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:All_in_One.VisualLogic.Windows"
        mc:Ignorable="d"
        Title="PleaseWait" Height="150" Width="220">
    <Grid>
        <Label Content="Raids werden geladen, bitte warten..."></Label>
        <ProgressBar Name="WaitBar" Height="20" Minimum="0" Maximum="100" IsIndeterminate="True"></ProgressBar>
    </Grid>
</Window>
